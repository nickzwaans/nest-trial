{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@controllers/*": [ "src/controllers/*" ],
            "@services/*": [ "src/services/*" ],
            "@modules/*": [ "src/modules/*" ],
            "@models/*": [ "src/models/*" ]
        }
    }
}
